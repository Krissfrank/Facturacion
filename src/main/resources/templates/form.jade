extends ./layout.jade
block title
  Voucher

block content
    form(action='saveForm',method='POST') 

        div(class='container-fluid hero-unit', style='margin-top: -20px; background-color: rgba(0,0,0,0.5); color: white')
            div(class='row-fluid' )
                h1 Facturacion electronica

        div(class='container-fluid hero-unit', style='background-color: rgba(255,255,255,0.7)')
            div(class='row-fluid')
                div(class='span6')
                    div(class='container-fluid', style='text-align: center ; margin-top: -20px')
                        div(class='row-fluid')
                            h1 Transmitter

                    div(class='container-fluid', style='margin-top: 2%')

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Nombre:
                            div(class='span2')
                                input(type='text', name='Tnombre', pattern='[A-Za-z /s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') RFC:
                            div(class='span2')
                                input(type='text', name='Trfc', pattern='[A-Z]{4}[0-9]{6}[A-Z]{2}[0-9]{1}', maxlength='13', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Taxation:
                            div(class='span2')
                                input(type='text', name='Ttaxation', pattern='[A-Za-z]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Colonia:
                            div(class='span2')
                                input(type='text', name='Tcolonia', pattern='[A-Za-z0-9 /s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Calle:
                            div(class='span2')
                                input(type='text', name='Tcalle', pattern='[A-Za-z0-9 /s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Numero interior:
                            div(class='span2')
                                input(type='text', name='Tinterior', pattern='[0-9]*', maxlength='20') 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Numero exterior:
                            div(class='span2')
                                input(type='text', name='Texterior', pattern='[0-9]+', maxlength='20', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Localidad:
                            div(class='span2')
                                input(type='text', name='Tlocalidad', pattern='[A-Za-z0-9]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Referencia:
                            div(class='span2')
                                input(type='text', name='Treferencia', pattern='[A-Za-z0-9 \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Pais:
                            div(class='span2')
                                input(type='text', name='Tpais', pattern='[A-Za-z \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Estado:
                            div(class='span2')
                                input(type='text', name='Testado', pattern='[A-Za-z \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Ciudad:
                            div(class='span2')
                                input(type='text', name='Tciudad', pattern='[A-Za-z \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Codigo postal:
                            div(class='span2')
                                input(type='text', name='Tcp', pattern='[0-9]+', required) 





                div(class='span6')
                    div(class='container-fluid', style='text-align: center ; margin-top: -20px')
                        div(class='row-fluid')
                            h1 Receptor

                    div(class='container-fluid', style='margin-top: 2%')

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Nombre:
                            div(class='span2')
                                input(type='text', name='Rnombre', pattern='[A-Za-z /s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') RFC:
                            div(class='span2')
                                input(type='text', name='Rrfc', pattern='[A-Z]{4}[0-9]{6}[A-Z]{2}[0-9]{1}', maxlength='13', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Taxation:
                            div(class='span2')
                                input(type='text', name='Rtaxation', pattern='[A-Za-z]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Colonia:
                            div(class='span2')
                                input(type='text', name='Rcolonia', pattern='[A-Za-z0-9 /s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Calle:
                            div(class='span2')
                                input(type='text', name='Rcalle', pattern='[A-Za-z0-9 /s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Numero interior:
                            div(class='span2')
                                input(type='text', name='Rinterior', pattern='[0-9]*', maxlength='20') 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Numero exterior:
                            div(class='span2')
                                input(type='text', name='Rexterior', pattern='[0-9]+', maxlength='20', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Localidad:
                            div(class='span2')
                                input(type='text', name='Rlocalidad', pattern='[A-Za-z0-9]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Referencia:
                            div(class='span2')
                                input(type='text', name='Rreferencia', pattern='[A-Za-z0-9 \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Pais:
                            div(class='span2')
                                input(type='text', name='Rpais', pattern='[A-Za-z \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Estado:
                            div(class='span2')
                                input(type='text', name='Restado', pattern='[A-Za-z \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Ciudad:
                            div(class='span2')
                                input(type='text', name='Rciudad', pattern='[A-Za-z \s]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') Codigo postal:
                            div(class='span2')
                                input(type='text', name='Rcp', pattern='[0-9]+', required) 

                        div(class='row-fluid')
                            div(class='span1')
                            div(class='span2', style='text-align: right') email:
                            div(class='span2')
                                input(type='text', name='Rmail', pattern='[0-9a-zA-Z_-.]+(@)[0-9a-zA-Z]+(.)[0-9a-zA-Z]+', maxlength='100', required) 






        div(class='container-fluid hero-unit', style=' margin-left: 2%; margin-right: 2%')
            div(class='container-fluid', style='text-align: center ; margin-top: -20px')
                div(class='row-fluid')
                    h2 Voucher
        
            div(class='container-fluid')
                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Serie:
                    div(class='span1')
                        input(type='text', name='Vserie', pattern='[A-Za-z]', maxlength='1', required)
                    div(class='span1')
                    div(class='span2', style='text-align: right') Folio:
                    div(class='span1')
                        input(type='text', name='Vfolio', pattern='[0-9]+', required)

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Divisa:
                    div(class='span1')
                        input(type='text', name='Vdivisa', pattern='[a-zA-z]+', required)
                    div(class='span1')
                    div(class='span2', style='text-align: right') Tipo de divisa:
                    div(class='span1')
                        input(type='text', name='Vtipodiv', pattern='[A-Za-z]+', required)


                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Metodo pago:
                    div(class='span1')
                        input(type='text', name='Vmetpago', pattern='[a-zA-z]+', required)
                    div(class='span1')
                    div(class='span2', style='text-align: right') Tipo de pago:
                    div(class='span1')
                        input(type='text', name='Vtipopago', pattern='[A-Za-z]+', required)


                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Condition pay:
                    div(class='span1')
                        input(type='text', name='Vcondition', pattern='[a-zA-z]+', required)
          
                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Place of expedition:
                    div(class='span1')
                        input(type='text', name='Vplaceex', pattern='[a-zA-z]+', required)

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Kind of voucher:
                    div(class='span1')
                        input(type='text', name='Vkindvouch', pattern='[a-zA-z]+', maxlength='20', required)






            div(class='container-fluid', style='text-align: center ; margin-top: -20px')
                div(class='row-fluid')
                    h2 Impuestos retenidos

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Taxes:
                    div(class='span1')
                        select(name='taxesWithheld')
                            option(value='iva') IVA
                            option(value='isr') ISR

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Import:
                    div(class='span1')
                        input(type='number', name='TWimport', pattern='[0-9]+', required)



            div(class='container-fluid', style='text-align: center ; margin-top: -20px')
                div(class='row-fluid')
                    h2 Impuestos de traslado

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Impuesto:
                    div(class='span1')
                        select(name='taxesTrans')
                            option(value='iva') IVA
                            option(value='isr') IEPS

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Import:
                    div(class='span1')
                        input(type='text', name='TTimport', pattern='[0-9]+',maxlength='13', required)

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Rate:
                    div(class='span1')
                        input(type='text', name='TWrate', pattern='[0-9]{3}\.[0-9]{2}', required)

            div(class='container-fluid', style='text-align: center ; margin-top: -20px')
                div(class='row-fluid')
                    h2 Conceptos

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Cantidad:
                    div(class='span1')
                        input(type='text', name='Ccantidad', pattern='[0-9]+', required)

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Unidad:
                    div(class='span1')
                        input(type='text', name='Cunidad', pattern='[0-9]+')

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') No. identificacion:
                    div(class='span1')
                        input(type='text', name='Cnoid', pattern='[0-9]+', required)

                div(class='row-fluid', style='margin-left: -10%')
                    div(class='span2')
                    div(class='span2', style='text-align: right') Descripcion:
                    div(class='span1')
                        input(type='text', name='Cdesc', pattern='[a-zA-z /s]+', maxlength='50', required)




                input(class ='btn btn-inverse', type='submit', value='Guardar', align='center')
         






 
         















