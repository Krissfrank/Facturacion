
extends ./layout.jade

block title
  title Home

block content
    

    div(class='container-fluid hero-unit', style='background-color: rgba(0,0,0,0.5); color: white')
        div
        br 
        h1(align='center') Bienvenido
        h3(align='center') Dale agregar para... agregar -.-
        br 
        br
   
    div(class='container hero-unit')
        table(class='table table-hover')
            tr
                td 
                td Folio
                td RFC receptor
                td Nombre
                td Fecha
                td RFC Emisor
                td 
            if regis
                each reg, i in regis
                    tr 
                        td 
                            a(href='/delete/#{reg.regis().number("regis_id")}', onclick='return confirm("Confirmar eliminacion")') Eliminar
                        td #{reg.voucher().number("folio") }
                        td #{reg.receptor().string("rfc") }
                        td #{reg.receptor().string("name") }
                        td #{reg.voucher().dateTime("created_at") }
                        td #{reg.transmitter().string("rfc") }
                        td 
                            a(href='/pdf/#{reg.regis().number("regis_id")}') PDF
                        td 
                            a(href='/xml/#{reg.regis().number("regis_id")}') XML
                     



